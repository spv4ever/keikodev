{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "runtime": "python",
    "numReplicas": 1,
    "maxReplicas": 3,
    "minReplicas": 1,
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "memory": 2048,
    "cpu": 1000,
    "startCommandTimeout": 30
  }
}